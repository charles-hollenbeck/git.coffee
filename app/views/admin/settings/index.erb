<div class="content-wrapper">
  <div class="content">
    <h1>Settings</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Value</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @settings.each do |setting| %>
          <tr>
            <td><%= setting.name %></td>
            <td><%= setting.value %></td>
            <td><%= link_to 'Edit', edit_admin_setting_url(setting) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>